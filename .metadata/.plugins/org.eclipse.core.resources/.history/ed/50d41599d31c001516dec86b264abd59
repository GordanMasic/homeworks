package ba.bitcamp.homeworkWeekend6.task01;

import java.applet.Applet;
import java.awt.GridLayout;




import java.awt.LayoutManager;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;

public class Task1 extends JFrame{

	private static final long serialVersionUID = -2743244957814182622L;
	
	GridLayout window = new GridLayout(9,1);
	JButton[] buttons = new JButton[9];
	String[] textOnButtons = new String[]{"1","2","3","4","5","6","7","8","9"};
	
	private int counter = 0;
	private int number = 0;
	private int base = 100;
	
	public Task1(){
		
		setTitle("Generator for three digit number");
		setSize(400,300);
		setLocationRelativeTo(null);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setVisible(true);
		add(buttons[0]);
		
		for (int i = 0; i < buttons.length; i++) {
			buttons[i].setText(textOnButtons[i]);
		}
		
}

	
	public static void main(String[] args) {

		new Task1();

	}

}
